@model IEnumerable<OnlinFIRSystem.Models.FIR>

@{
    ViewBag.Title = "List of Raised FIR";
}

<h2>List of Raised FIR</h2>

<p>
    @Html.ActionLink("Create New FIR", "Create", new object { }, new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FIRNUMBER)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTimeFIR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PoliceStationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FIRAgainst)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Witnesses)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FIRSTATUS)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FIRNUMBER)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateTimeFIR)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Location)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PoliceStationName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FIRAgainst)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Witnesses)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EmailId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TypeofStatus)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
